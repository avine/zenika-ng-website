{
  "name": "zenika-ng-website",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "ng lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "start:01": "ng serve --project 01_reminders",
    "start:02": "ng serve --project 02_bestpractices",
    "start:03": "ng serve --project 03_rxjs",
    "start:04": "ng serve --project 04_standalone",
    "start:05": "ng serve --project 05_router",
    "start:06": "ng serve --project 06_reactiveform",
    "start:07": "ng serve --project 07_i18n",
    "start:08": "ng serve --project 08_universal",
