    "test:02": "ng test --project 02_bestpractices",
    "test:03": "ng test --project 03_rxjs",
    "test:04": "ng test --project 04_standalone",
    "test:05": "ng test --project 05_router",
    "test:06": "ng test --project 06_reactiveform",
    "test:07": "ng test --project 07_i18n",
    "test:08": "ng test --project 08_universal",
    "build:07": "ng build --project 07_i18n",
    "i18n:07": "ng extract-i18n --project 07_i18n --format json --output-path projects/07_i18n/src/locales --out-file messages.fr.json",
    "dev:ssr:08": "ng run 08_universal:serve-ssr",
    "build:ssr:08": "ng build --project 08_universal && ng run 08_universal:server",
    "serve:ssr:08": "node dist/08_universal/server/main.js",
    "prerender:08": "ng run 08_universal:prerender"
